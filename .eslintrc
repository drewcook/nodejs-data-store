{
	"extends": ["airbnb-base", "prettier", "plugin:node/recommended", "plugin:jest/recommended"],
	"plugins": [
		"prettier",
		"jest"
	],
	"env": {
		"es2020": true,
		"node": true,
		"es6": true
	},
	"parserOptions": {
		"ecmaVersion": 11
	},
	"rules": {
		// Prefer tab styling
		"no-tabs": "off",
		"indent": ["error", "tab", { "SwitchCase": 1 }],
    "no-underscore-dangle": "off"
	},
	"globals": {
		"__dirname": true
	}
}
